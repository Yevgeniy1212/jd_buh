Функция НеВерноУказанНомерАвто(Знач НомерДляПроверки) Экспорт
	
	Для N = 1 по СтрДлина(НомерДляПроверки) Цикл
		ТекКодСимвола = КодСимвола(НомерДляПроверки, N);//48-57>>0-9, 65-90>>A-Z, 97-122>>a-z
		Если (ТекКодСимвола < 48) ИЛИ ((ТекКодСимвола > 57) И (ТекКодСимвола < 65)) 
			ИЛИ ((ТекКодСимвола > 90) И (ТекКодСимвола < 97)) ИЛИ (ТекКодСимвола > 122) Тогда
			Возврат Истина;
		КонецЕсли;
	КонецЦикла;
	
	Возврат Ложь;
	
КонецФункции

Функция ВерноУказанУчетныйНомер(Знач УчетныйНомерДляПроверки) Экспорт
	
	//Учетный номер валютного договора должен быть в формате X/XXX/XXXX/XXXXXXXXXX, где X - цифра, первый фасет должен быть 1 или 2, в последней фасет должен содержать от 1 до 20 цифр
	//1 – если валютный договор по экспорту
	//2 – если валютный договор по импорту
	ФасетУчетныйНомер = "[1-2][/][0-9][0-9][0-9][/][0-9][0-9][0-9][0-9][/]";
	БезПоследнегоФасета = Лев(УчетныйНомерДляПроверки, 11);
	ДлинаПоследнегоФасета = СтрДлина(УчетныйНомерДляПроверки) - (СтрНайти(УчетныйНомерДляПроверки,"/",,,3));
	
	ПоследнийФасет = Сред(УчетныйНомерДляПроверки, 12, ДлинаПоследнегоФасета);

	ПервыеТриФасетаВерны = ВСВызовСервера.СтрокаСоответствуетФасету(БезПоследнегоФасета, ФасетУчетныйНомер);
	ПоследнйФасетВерный = Ложь;

	Если ДлинаПоследнегоФасета >= 1 И ДлинаПоследнегоФасета <= 20 Тогда
		
		Для N = 1 по ДлинаПоследнегоФасета Цикл
			
			ТекКодСимвола = КодСимвола(ПоследнийФасет, N);//48-57>>0-9
			
			Если ТекКодСимвола >= 48 И ТекКодСимвола <= 57 Тогда
				ПоследнйФасетВерный = Истина;
			иначе
				ПоследнйФасетВерный = Ложь;
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЕсли;
	
	Возврат ПервыеТриФасетаВерны И ПоследнйФасетВерный;
	
КонецФункции
