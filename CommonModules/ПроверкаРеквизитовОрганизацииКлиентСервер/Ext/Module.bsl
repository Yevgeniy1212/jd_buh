	Элементы = Форма.Элементы;
	
	Если ЗначениеЗаполнено(Организация)
		И НЕ Форма.ИспользоватьНесколькоКассОрганизации
		И НЕ Форма.ОсновнаяКассаОрганизацииЗаполнена Тогда
		
		Возврат Истина;
	Иначе
		Возврат Ложь;
	КонецЕсли;

КонецФункции

Функция ПоказатьПредупреждениеОРеквизитахКассыВОтчете(Форма, Объект) Экспорт
	
	Элементы = Форма.Элементы;
	
	ИспользоватьНесколькоКассОрганизации = Форма.ИспользоватьНесколькоКасс;
	
	Если ЗначениеЗаполнено(Объект.Организация)
		И НЕ ИспользоватьНесколькоКассОрганизации 
		И НЕ ЗначениеЗаполнено(Объект.Касса) Тогда
		
		Возврат Истина;
	Иначе
		Возврат Ложь;
	КонецЕсли;

КонецФункции