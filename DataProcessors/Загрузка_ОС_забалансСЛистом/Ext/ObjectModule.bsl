// Переменный для импорта
Перем ТаблицаКонтейнеров, ТаблицаСчетовФактур, ТаблицаАВР;

Перем ДанныеПоПлатежам;

Процедура ЗаполнитьЮрАдресКонтрагента(Контрагент, Адрес) Экспорт
	
	Если ЗначениеЗаполнено(Контрагент) + ЗначениеЗаполнено(Адрес) <> 2 Тогда
		Возврат;
	КонецЕсли;	
	
	Контакты = РегистрыСведений.КонтактнаяИнформация.СоздатьНаборЗаписей();
	Контакты.Отбор.Объект.Значение      = Контрагент;
	Контакты.Отбор.Тип.Значение         = Перечисления.ТипыКонтактнойИнформации.Адрес;
	Контакты.Отбор.Вид.Значение         = Справочники.ВидыКонтактнойИнформации.ЮрАдресКонтрагента;
	Контакты.Отбор.Объект.Использование = Истина;
	Контакты.Отбор.Тип.Использование    = Истина;
	Контакты.Отбор.Вид.Использование    = Истина;
	Контакты.Прочитать();
	
	Если Контакты.Количество() = 0 Тогда
		ЮрАдрес                = Контакты.Добавить();
		ЮрАдрес.Объект         = Контрагент.Ссылка;
		ЮрАдрес.Тип            = Перечисления.ТипыКонтактнойИнформации.Адрес;
		ЮрАдрес.Вид            = Справочники.ВидыКонтактнойИнформации.ЮрАдресКонтрагента;
		ЮрАдрес.Представление  = Адрес;
	Иначе
		Контакты[0].Представление = Адрес;
	КонецЕсли;	

	Попытка 
		Контакты.Записать();
	Исключение
		Сообщить(ОписаниеОшибки());
	КонецПопытки;
	
КонецПроцедуры 

Процедура ЗаполнитьСчетаУчетаВзаиморасчетовСКонтрагентом(Организация,Контрагент,Договор) Экспорт
	
	Если ЗначениеЗаполнено(Контрагент.Ссылка) + ЗначениеЗаполнено(Договор.Ссылка) <> 2 Тогда
		Сообщить("Ошибка заполнения счетов взаиморасчетов. Контрагент: "+Контрагент+"; Договор: "+Договор+".");
		Возврат;
	КонецЕсли;	
		
	СчетаВзаиморасчетов = РегистрыСведений.СчетаУчетаРасчетовСКонтрагентами.СоздатьНаборЗаписей();
	СчетаВзаиморасчетов.Отбор.Организация.Значение = Организация.Ссылка;
	СчетаВзаиморасчетов.Отбор.Контрагент.Значение  = Контрагент.Ссылка;
	СчетаВзаиморасчетов.Отбор.Договор.Значение     = Договор.Ссылка;
	СчетаВзаиморасчетов.Отбор.Организация.Использование = Истина;
	СчетаВзаиморасчетов.Отбор.Контрагент.Использование  = Истина;
	СчетаВзаиморасчетов.Отбор.Договор.Использование     = Истина;
	СчетаВзаиморасчетов.Прочитать();
	
	Если СчетаВзаиморасчетов.Количество() = 0 Тогда
		НоваяЗапись                       = СчетаВзаиморасчетов.Добавить();
		// Измерения
		НоваяЗапись.Организация           = Организация.Ссылка;
		НоваяЗапись.Договор               = Договор.Ссылка;
		НоваяЗапись.Контрагент            = Контрагент.Ссылка;
		НоваяЗапись.ВидРасчетовПоДоговору = Перечисления.ВидыРасчетовПоДоговорам.РасчетыВВалютеРегламентированногоУчета;
		// Ресурсы
	КонецЕсли;	

	Попытка 
		СчетаВзаиморасчетов.Записать();
	Исключение
		Сообщить(ОписаниеОшибки());
	КонецПопытки;	
КонецПроцедуры	

