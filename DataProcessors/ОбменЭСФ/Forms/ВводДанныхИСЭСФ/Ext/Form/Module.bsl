// Сохранение и загрузка пароля ключевого контейнера.

&НаКлиенте
Процедура ЗапомнитьПарольКлючевогоКонтейнераНаВремяСеанса(НазначениеКлюча = "КлючПодписи")
	
	Для Каждого СтрокаДанных Из ДанныеИСЭСФ Цикл
		
		Если НазначениеКлюча = "КлючВхода" Тогда
			ИмяСеансовыхДанных = ЭСФКлиент.ИмяСеансовыхДанныхПарольКлючевогоКонтейнераВходаЭЦП();
		Иначе
			ИмяСеансовыхДанных = ЭСФКлиент.ИмяСеансовыхДанныхПарольКлючевогоКонтейнераЭЦП();
		КонецЕсли;
		
		Если СтрокаДанных.ЗапомнитьНаВремяСеанса Тогда	
			Если НазначениеКлюча = "КлючВхода" Тогда
				ЭСФКлиент.СохранитьСеансовыеДанные(ИмяСеансовыхДанных, СтрокаДанных.КлючВходаИмя, СтрокаДанных.ПарольВхода);
			Иначе
				ЭСФКлиент.СохранитьСеансовыеДанные(ИмяСеансовыхДанных, СтрокаДанных.КлючИмя, СтрокаДанных.Пароль);
			КонецЕсли;
		Иначе
			Если НазначениеКлюча = "КлючВхода" Тогда
				ЭСФКлиент.УдалитьСеансовыеДанные(ИмяСеансовыхДанных, СтрокаДанных.КлючВходаИмя);
			Иначе
				ЭСФКлиент.УдалитьСеансовыеДанные(ИмяСеансовыхДанных, СтрокаДанных.КлючИмя);
			КонецЕсли;
		КонецЕсли;
		
	КонецЦикла;
	
КонецПроцедуры

&НаКлиенте
Функция ПарольКлючевогоКонтейнераЗапомненныйНаВремяСеанса(Знач КлючИмя, НазначениеКлюча = "КлючПодписи")
	
	Если НазначениеКлюча = "КлючВхода" Тогда
		ИмяСеансовыхДанных = ЭСФКлиент.ИмяСеансовыхДанныхПарольКлючевогоКонтейнераВходаЭЦП();
	Иначе
		ИмяСеансовыхДанных = ЭСФКлиент.ИмяСеансовыхДанныхПарольКлючевогоКонтейнераЭЦП();
	КонецЕсли;
	Пароль = ЭСФКлиент.ПолучитьСеансовыеДанные(ИмяСеансовыхДанных, КлючИмя, "");
	
	Возврат Пароль;
	
КонецФункции

///////////////////////////////////////////////////////////////////////////////
// Сохранение и загрузка ключевого контейнера в формате Base64.
// Ключевой контейнер сохраняется в переменной сеанса пользователя.

&НаКлиенте
Процедура ЗапомнитьКлючBase64НаВремяСеанса(НазначениеКлюча = "КлючПодписи")
	
	Если НазначениеКлюча = "КлючВхода" Тогда
		ИмяСеансовыхДанных = ЭСФКлиент.ИмяСеансовыхДанныхКлючВходаBase64();
	Иначе
		ИмяСеансовыхДанных = ЭСФКлиент.ИмяСеансовыхДанныхКлючBase64();
	КонецЕсли;
	
	Для Каждого СтрокаДанных Из ДанныеИСЭСФ Цикл
		
		ДанныеКлюча = Новый Структура;
		Если НазначениеКлюча = "КлючВхода" Тогда
			ДанныеКлюча.Вставить("КлючИмя", СтрокаДанных.КлючВходаИмя);
			ДанныеКлюча.Вставить("КлючBase64", СтрокаДанных.КлючВходаBase64);
			ДанныеКлюча.Вставить("КлючПолноеИмя", СтрокаДанных.КлючВходаПолноеИмя);
		Иначе
			ДанныеКлюча.Вставить("КлючИмя", СтрокаДанных.КлючИмя);
			ДанныеКлюча.Вставить("КлючBase64", СтрокаДанных.КлючBase64);
			ДанныеКлюча.Вставить("КлючПолноеИмя", СтрокаДанных.КлючПолноеИмя);
		КонецЕсли;
		
		Если СтрокаДанных.ЗапомнитьНаВремяСеанса Тогда	
			ЭСФКлиент.СохранитьСеансовыеДанные(ИмяСеансовыхДанных, СтрокаДанных.ПрофильИСЭСФ, ДанныеКлюча); 
		Иначе
			ЭСФКлиент.УдалитьСеансовыеДанные(ИмяСеансовыхДанных, СтрокаДанных.ПрофильИСЭСФ);		
		КонецЕсли;
		
	КонецЦикла;
	
КонецПроцедуры

&НаКлиенте
Функция КлючBase64ЗапомненныйНаВремяСеанса(Знач ПрофильИСЭСФ, НазначениеКлюча = "КлючПодписи")
	
	Если НазначениеКлюча = "КлючВхода" Тогда
		ИмяСеансовыхДанных = ЭСФКлиент.ИмяСеансовыхДанныхКлючВходаBase64();
	Иначе
		ИмяСеансовыхДанных = ЭСФКлиент.ИмяСеансовыхДанныхКлючBase64();
	КонецЕсли;
	
	ПустыеДанныеКлюча = Новый Структура;
	ПустыеДанныеКлюча.Вставить("КлючИмя", "");
	ПустыеДанныеКлюча.Вставить("КлючBase64", "");
	ПустыеДанныеКлюча.Вставить("КлючПолноеИмя", "");
	
	ДанныеКлюча = ЭСФКлиент.ПолучитьСеансовыеДанные(ИмяСеансовыхДанных, ПрофильИСЭСФ, ПустыеДанныеКлюча);
	
	Возврат ДанныеКлюча;
	
КонецФункции

