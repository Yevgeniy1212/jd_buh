Функция ОткрытыйСертификатBase64(Знач КлючBase64, Знач Пароль, Знач АдресКлюча = "")
	
	Если ЭСФВызовСервера.ИспользоватьОткрытиеСессииСПодписью() ИЛИ ЭСФВызовСервера.ИспользоватьПодписьНовойКомпоненты() Тогда
		Если ЭСФВызовСервера.ИспользоватьВнешнююКриптографиюДляКомпоненты() Тогда
			ОткрытыйСертификатBase64 = ИзвлечьСертификатИзФайла(КлючBase64, Пароль, АдресКлюча);
			Возврат ОткрытыйСертификатBase64;
		КонецЕсли;
	КонецЕсли;
	
	Контейнер = ЭСФКлиентСервер.КонтейнерМетодов();
	
	Если ЭСФВызовСервераПовтИсп.ВыполнятьКриптографическиеОперацииНаКлиенте() Тогда 
		ОткрытыйСертификатBase64 = Контейнер.ОткрытыйСертификатBase64(КлючBase64, Пароль);
	Иначе
		ОткрытыйСертификатBase64 = ОткрытыйСертификатBase64НаСервере(КлючBase64, Пароль);	
	КонецЕсли;
	
	Возврат ОткрытыйСертификатBase64;
	
