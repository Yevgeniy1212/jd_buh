&НаКлиенте
Процедура ОК(Команда)
	
	СчетчикСтруктурныхЕдиниц = 0;
	
	ЕстьОшибки = Ложь;
	
	СоответствиеОрганизацийИНастроек = Новый Соответствие;
	
	ИспользуетсяЕдиныйКлюч = 0;
	
	Для Каждого СтрокаДанных Из ДанныеИСЭСФ Цикл
		
		СтруктурнаяЕдиницаТекст = "(" + Строка(СтрокаДанных.СтруктурнаяЕдиница) + ")";
		ПользовательТекст = "(" + Строка(СтрокаДанных.ПользовательИСЭСФ) + ")";
		
		ИспользуетсяЕдиныйКлюч = ?(СтрокаДанных.ВыборКлюча = 2, Истина, Ложь);
		
		Если ПустаяСтрока(СтрокаДанных.ПарольИСЭСФ) Тогда
			ТекстСообщения = ЭСФКлиентСерверПереопределяемый.ПодставитьПараметрыВСтроку(НСтр("ru = 'Укажите пароль входа ИС ЭСФ %1'"),?(ПереданСписокПользователей, ПользовательТекст, СтруктурнаяЕдиницаТекст));
			ЭСФКлиентСервер.СообщитьПользователю(ТекстСообщения, "Организация[" + СчетчикСтруктурныхЕдиниц + "].КлючИмя");
			ЕстьОшибки = Истина;
		КонецЕсли;
		
		// Проверить, что ключевой контейнер был выбран.
		Если ТребуетсяВыборСертификата Тогда
			
			Если ПустаяСтрока(СтрокаДанных.КлючBase64) Тогда
				ТекстСообщения = ЭСФКлиентСерверПереопределяемый.ПодставитьПараметрыВСтроку(НСтр("ru = 'Выберите файл сертификата %1'"),СтруктурнаяЕдиницаТекст);
				ЭСФКлиентСервер.СообщитьПользователю(ТекстСообщения, "Организация[" + СчетчикСтруктурныхЕдиниц + "].КлючИмя");
				ЕстьОшибки = Истина;
			КонецЕсли;
			
			Если ПустаяСтрока(СтрокаДанных.Пароль) Тогда
				ТекстСообщения = ЭСФКлиентСерверПереопределяемый.ПодставитьПараметрыВСтроку(НСтр("ru = 'Укажите пароль сертификата %1'"),СтруктурнаяЕдиницаТекст);
				ЭСФКлиентСервер.СообщитьПользователю(ТекстСообщения, "Организация[" + СчетчикСтруктурныхЕдиниц + "].Пароль");
				ЕстьОшибки = Истина;
			КонецЕсли;
			
		КонецЕсли;
		
		// Проверить, что ключевой контейнер был выбран.
		Если ТребуетсяВыборСертификатаВхода Тогда
		
			Если НЕ ИспользуетсяЕдиныйКлюч Тогда
				
				Если ПустаяСтрока(СтрокаДанных.КлючВходаBase64) Тогда
					ТекстСообщения = ЭСФКлиентСерверПереопределяемый.ПодставитьПараметрыВСтроку(НСтр("ru = 'Выберите файл сертификата %1'"),СтруктурнаяЕдиницаТекст);
					ЭСФКлиентСервер.СообщитьПользователю(ТекстСообщения, "Организация[" + СчетчикСтруктурныхЕдиниц + "].КлючВходаИмя");
					ЕстьОшибки = Истина;
				КонецЕсли;
				
				Если ПустаяСтрока(СтрокаДанных.ПарольВхода) Тогда
					ТекстСообщения = ЭСФКлиентСерверПереопределяемый.ПодставитьПараметрыВСтроку(НСтр("ru = 'Укажите пароль сертификата %1'"),СтруктурнаяЕдиницаТекст);
					ЭСФКлиентСервер.СообщитьПользователю(ТекстСообщения, "Организация[" + СчетчикСтруктурныхЕдиниц + "].ПарольВхода");
					ЕстьОшибки = Истина;
				КонецЕсли;
				
			КонецЕсли;
			
		КонецЕсли;
		
		Если ТребуетсяУказаниеДолжности Тогда
			Если ПустаяСтрока(СтрокаДанных.ДолжностьПодписывающего) Тогда
				ТекстСообщения = ЭСФКлиентСерверПереопределяемый.ПодставитьПараметрыВСтроку(НСтр("ru = 'Укажите должность для документов ЭАВР %1'"),?(ПереданСписокПользователей, ПользовательТекст, СтруктурнаяЕдиницаТекст));
				ЭСФКлиентСервер.СообщитьПользователю(ТекстСообщения, "Организация[" + СчетчикСтруктурныхЕдиниц + "].КлючИмя");
				ЕстьОшибки = Истина;
			КонецЕсли;
		КонецЕсли;
		
		ИмяСеансовыхДанных = ЭСФКлиент.ИмяСеансовыхДанныхПарольАутентификацииИСЭСФ();
		ЭСФКлиент.СохранитьСеансовыеДанные(ИмяСеансовыхДанных, СтрокаДанных.ПользовательИСЭСФ, ?(СтрокаДанных.ЗапомнитьНаВремяСеансаАвторизация, СтрокаДанных.ПарольИСЭСФ, ""));	
		
		Если СтрокаДанных.НеЗапрашиватьПарольНаВремяСеанса Тогда
			
			Если УдалосьОткрытьСессию(СтрокаДанных.ПользовательИСЭСФ, СтрокаДанных.ПарольИСЭСФ, СчетчикСтруктурныхЕдиниц) Тогда
				ИмяСеансовыхДанных = ЭСФКлиент.ИмяСеансовыхДанныхПоказыватьФормуВводаПароляАутентификации();
				ЭСФКлиент.СохранитьСеансовыеДанные(ИмяСеансовыхДанных, СтрокаДанных.ПользовательИСЭСФ, Ложь);
			Иначе
				СтрокаДанных.НеЗапрашиватьПарольНаВремяСеанса = Ложь;
				Элементы["Организация" + СчетчикСтруктурныхЕдиниц + "ЗапомнитьНаВремяСеансаАвторизация"].Доступность = Истина;
				Возврат;
			КонецЕсли;
			
		КонецЕсли;
		
		СчетчикСтруктурныхЕдиниц = СчетчикСтруктурныхЕдиниц + 1;
		
	КонецЦикла;
	
	Если ЕстьОшибки Тогда
		
		Возврат;
		
	Иначе
		
		// Требуется указать только пароль входа ИС ЭСФ
		Если ТребуетсяВыборСертификата ИЛИ ТребуетсяВыборСертификатаВхода Тогда
			
			Для Каждого СтрокаДанных Из ДанныеИСЭСФ Цикл
				
				Результат = Новый Структура;
				
				ИспользуетсяЕдиныйКлюч = ?(СтрокаДанных.ВыборКлюча = 2, Истина, Ложь);
				
				Если ТребуетсяВыборСертификата Тогда
					
					ОткрытыйСертификатBase64 = ОткрытыйСертификатBase64(СтрокаДанных.КлючBase64, СтрокаДанных.Пароль, СтрокаДанных.КлючПолноеИмя);
					
					Если ОткрытыйСертификатBase64 = Неопределено Тогда
						Возврат;
					КонецЕсли;
					
					Результат.Вставить("ОткрытыйСертификатBase64", ОткрытыйСертификатBase64);
					Результат.Вставить("Пароль", СтрокаДанных.Пароль);
					Результат.Вставить("КлючBase64", СтрокаДанных.КлючBase64);
					Результат.Вставить("АдресКлюча", СтрокаДанных.КлючПолноеИмя);

					Если ИспользуетсяЕдиныйКлюч Тогда
						Если ТребуетсяВыборСертификатаВхода Тогда
							Результат.Вставить("ОткрытыйСертификатВходаBase64", ОткрытыйСертификатBase64);
							Результат.Вставить("КлючВходаBase64", СтрокаДанных.КлючBase64);
							Результат.Вставить("ПарольВхода", СтрокаДанных.Пароль);
							Результат.Вставить("АдресКлючаВхода", СтрокаДанных.КлючПолноеИмя);
							
							// Заполнение данных по ключу AUTH из данных RSA, так как по новым ключам ГОСТ2015 один ключ
							СтрокаДанных.КлючВходаИмя = СтрокаДанных.КлючИмя;
							СтрокаДанных.КлючВходаBase64 = СтрокаДанных.КлючBase64;
							СтрокаДанных.ПарольВхода = СтрокаДанных.Пароль;
							СтрокаДанных.КлючВходаПолноеИмя = СтрокаДанных.КлючПолноеИмя;
						КонецЕсли;
					КонецЕсли; 

				КонецЕсли;
				
				Результат.Вставить("ПарольИСЭСФ", СтрокаДанных.ПарольИСЭСФ);
				Результат.Вставить("ПрофильИСЭСФ", СтрокаДанных.ПрофильИСЭСФ);
				
				Если ТребуетсяУказаниеДолжности Тогда
					Результат.Вставить("ДолжностьПодписывающего", СтрокаДанных.ДолжностьПодписывающего);
				КонецЕсли;
				
				Если ТребуетсяВыборСертификатаВхода И НЕ ИспользуетсяЕдиныйКлюч Тогда
					
					ОткрытыйСертификатBase64 = ОткрытыйСертификатBase64(СтрокаДанных.КлючВходаBase64, СтрокаДанных.ПарольВхода, СтрокаДанных.КлючВходаПолноеИмя);
					
					Если ОткрытыйСертификатBase64 = Неопределено Тогда
						Возврат;
					КонецЕсли;
					
					Результат.Вставить("ОткрытыйСертификатВходаBase64", ОткрытыйСертификатBase64);
					Результат.Вставить("КлючВходаBase64", СтрокаДанных.КлючВходаBase64);
					Результат.Вставить("ПарольВхода", СтрокаДанных.ПарольВхода);
					Результат.Вставить("АдресКлючаВхода", СтрокаДанных.КлючВходаПолноеИмя);
					
				КонецЕсли;
				СоответствиеОрганизацийИНастроек.Вставить(СтрокаДанных.СтруктурнаяЕдиница, Результат);
				
			КонецЦикла;
			
			// Запомнить введенные данные.
			СохранитьРасположениеКлючевогоКонтейнера();
			
			Если ТребуетсяВыборСертификата Тогда
				ЗапомнитьПарольКлючевогоКонтейнераНаВремяСеанса();
				ЗапомнитьКлючBase64НаВремяСеанса();
			КонецЕсли;
			
			Если ТребуетсяВыборСертификатаВхода Тогда
				ЗапомнитьПарольКлючевогоКонтейнераНаВремяСеанса("КлючВхода");
				ЗапомнитьКлючBase64НаВремяСеанса("КлючВхода");
			КонецЕсли;
			
			Закрыть(СоответствиеОрганизацийИНастроек);
			
		Иначе
			
			Если ЭСФВызовСервера.ИспользоватьПодписьНовойКомпоненты() Тогда
				
				Если ТребуетсяУказаниеДолжности Тогда
					Для Каждого СтрокаДанных Из ДанныеИСЭСФ Цикл
						СоответствиеОрганизацийИНастроек.Вставить(?(ПереданСписокПользователей, СтрокаДанных.ПользовательИСЭСФ, СтрокаДанных.СтруктурнаяЕдиница), ?(ПереданСписокПользователей, СтрокаДанных.ПарольИСЭСФ, Новый Структура("ПрофильИСЭСФ, ПарольИСЭСФ, ДолжностьПодписывающего", СтрокаДанных.ПрофильИСЭСФ, СтрокаДанных.ПарольИСЭСФ, СтрокаДанных.ДолжностьПодписывающего)));
					КонецЦикла;
				Иначе
					Для Каждого СтрокаДанных Из ДанныеИСЭСФ Цикл
						СоответствиеОрганизацийИНастроек.Вставить(?(ПереданСписокПользователей, СтрокаДанных.ПользовательИСЭСФ, СтрокаДанных.СтруктурнаяЕдиница), ?(ПереданСписокПользователей, СтрокаДанных.ПарольИСЭСФ, Новый Структура("ПрофильИСЭСФ, ПарольИСЭСФ", СтрокаДанных.ПрофильИСЭСФ, СтрокаДанных.ПарольИСЭСФ)));
					КонецЦикла;
				КонецЕсли;
				
			Иначе
				
				Для Каждого СтрокаДанных Из ДанныеИСЭСФ Цикл
					СоответствиеОрганизацийИНастроек.Вставить(?(ПереданСписокПользователей, СтрокаДанных.ПользовательИСЭСФ, СтрокаДанных.СтруктурнаяЕдиница), ?(ПереданСписокПользователей, СтрокаДанных.ПарольИСЭСФ, Новый Структура("ПрофильИСЭСФ, ПарольИСЭСФ", СтрокаДанных.ПрофильИСЭСФ, СтрокаДанных.ПарольИСЭСФ)));
				КонецЦикла;
				
			КонецЕсли;
			
				
			Закрыть(СоответствиеОрганизацийИНастроек);
			
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура Отмена(Команда)
	Закрыть(Неопределено);
КонецПроцедуры

&НаКлиенте
Процедура ПоказыватьПароль(Команда)
	
	НомерТекущейСтраницы = Число(СтрЗаменить(Элементы.ГруппаДанныеОрганизаций.ТекущаяСтраница.Имя, "ГруппаОрганизация", ""));
	ИмяЭлементаВвода = "Организация" + НомерТекущейСтраницы + "Пароль";
	ИмяЭлементаПереключателя = "Организация" + НомерТекущейСтраницы + "ПоказыватьПароль";
	ПереключитьРежимПароля(ИмяЭлементаВвода, ИмяЭлементаПереключателя);
	
КонецПроцедуры

&НаКлиенте
Процедура ПоказыватьПарольВхода(Команда)
	
	НомерТекущейСтраницы = Число(СтрЗаменить(Элементы.ГруппаДанныеОрганизаций.ТекущаяСтраница.Имя, "ГруппаОрганизация", ""));
	ИмяЭлементаВвода = "Организация" + НомерТекущейСтраницы + "ПарольВхода";
	ИмяЭлементаПереключателя = "Организация" + НомерТекущейСтраницы + "ПоказыватьПарольВхода";
	ПереключитьРежимПароля(ИмяЭлементаВвода, ИмяЭлементаПереключателя);
	
КонецПроцедуры

#КонецОбласти

#Область СлужебныеПроцедурыИФункции

&НаСервере
Процедура ИнициироватьГруппуЭлементовДанныхКлюча(СчетчикСтруктурныхЕдиниц, ГруппаОрганизации)
	
	Группа = Элементы.Вставить("ГруппаОрганизация" + СчетчикСтруктурныхЕдиниц + "ДанныеКлюча", Тип("ГруппаФормы"), Элементы["ГруппаОрганизация" + СчетчикСтруктурныхЕдиниц]);
	Группа.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	Группа.Заголовок = НСтр("ru = 'Данные ключа для подписи ЭСФ'");
	
	Элементы["ГруппаОрганизация" + СчетчикСтруктурныхЕдиниц + "ДанныеКлюча"].Группировка = ГруппировкаПодчиненныхЭлементовФормы.Вертикальная;
	
	Если Не ТребуетсяВыборПрофиляИСЭСФ Тогда
		НовыйЭлемент = Элементы.Добавить("Организация" + СчетчикСтруктурныхЕдиниц + "УполномоченныйСотрудник", Тип("ПолеФормы"), Группа);
		НовыйЭлемент.ПутьКДанным = "ДанныеИСЭСФ[" + СчетчикСтруктурныхЕдиниц + "].УполномоченныйСотрудник";	
		НовыйЭлемент.Вид = ВидПоляФормы.ПолеНадписи;
	КонецЕсли;
	
	
	Если ТребуетсяУказаниеДолжности И ЭСФВызовСервера.ИспользоватьПодписьНовойКомпоненты() И НЕ ЭСФВызовСервера.ИспользоватьВнешнююКриптографиюДляКомпоненты() Тогда
		
		НовыйЭлемент = Элементы.Добавить("Организация" + СчетчикСтруктурныхЕдиниц + "ДолжностьПодписывающего", Тип("ПолеФормы"), Группа);
		НовыйЭлемент.ПутьКДанным = "ДанныеИСЭСФ[" + СчетчикСтруктурныхЕдиниц + "].ДолжностьПодписывающего";	
		НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;	
		НовыйЭлемент.АвтоОтметкаНезаполненного = Истина;
		
	Иначе
		
		Если ТребуетсяУказаниеДолжности Тогда
			НовыйЭлемент = Элементы.Добавить("Организация" + СчетчикСтруктурныхЕдиниц + "ДолжностьПодписывающего", Тип("ПолеФормы"), Группа);
			НовыйЭлемент.ПутьКДанным = "ДанныеИСЭСФ[" + СчетчикСтруктурныхЕдиниц + "].ДолжностьПодписывающего";	
			НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;	
			НовыйЭлемент.АвтоОтметкаНезаполненного = Истина;
		КонецЕсли;
		
		Если ТребуетсяВыборСертификата Тогда
			НовыйЭлемент = Элементы.Добавить("Организация" + СчетчикСтруктурныхЕдиниц + "КлючИмя", Тип("ПолеФормы"), Группа);
			НовыйЭлемент.ПутьКДанным = "ДанныеИСЭСФ[" + СчетчикСтруктурныхЕдиниц + "].КлючИмя";	
			НовыйЭлемент.Вид = ВидПоляФормы.ПолеНадписи;
			НовыйЭлемент.Гиперссылка = Истина;
			НовыйЭлемент.Шрифт = Новый Шрифт(,,Истина);
			НовыйЭлемент.УстановитьДействие("Нажатие", "КлючИмяНажатие");
			
			ГруппаПароля = Элементы.Вставить("ГруппаВводаПароля" + СчетчикСтруктурныхЕдиниц, Тип("ГруппаФормы"), Группа);
			ГруппаПароля.Вид = ВидГруппыФормы.ОбычнаяГруппа;
			ГруппаПароля.Группировка = ГруппировкаПодчиненныхЭлементовФормы.Горизонтальная;
			ГруппаПароля.ОтображатьЗаголовок = Ложь;
			ГруппаПароля.СквозноеВыравнивание = СквозноеВыравнивание.Использовать;
			
			НовыйЭлемент = Элементы.Добавить("Организация" + СчетчикСтруктурныхЕдиниц + "Пароль", Тип("ПолеФормы"), ГруппаПароля);
			НовыйЭлемент.ПутьКДанным = "ДанныеИСЭСФ[" + СчетчикСтруктурныхЕдиниц + "].Пароль";	
			НовыйЭлемент.Вид = ВидПоляФормы.ПолеВвода;
