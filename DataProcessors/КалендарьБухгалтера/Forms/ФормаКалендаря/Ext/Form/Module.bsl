					НоваяСтрока.Периодичность = ПериодичностьМесячная();
					НоваяСтрока.ЗаПериодС = НачалоМесяца(СрокиПеречисления.Месяц);
					НоваяСтрока.ЗаПериодПо = КонецМесяца(СрокиПеречисления.Месяц);
					НоваяСтрока.СрокУплаты = ПолучитьСледующуюРабочуюДату(СрокиПеречисления.СрокПеречисления);
					НоваяСтрока.Кто = НСтр("ru = 'Агенты по уплате обязательных пенсионных взносов'", ОбщегоНазначения.КодОсновногоЯзыка());
					НоваяСтрока.НалогПолноеНазв = НСтр("ru = 'Перечисление обязательных пенсионных взносов'", ОбщегоНазначения.КодОсновногоЯзыка());
				КонецЦикла;
			ИначеЕсли (Событие.НазваниеСобытия = "ОППВ")Тогда
				СрокиПеречисления = ПолучитьСрокиПеречисленияОПВиСО(Справочники.НалогиСборыОтчисления.ОбязательныеПрофессиональныеПенсионныеВзносы);
				Пока СрокиПеречисления.Следующий() Цикл
					НоваяСтрока = ТаблУплата.Добавить();
					НоваяСтрока.Периодичность = ПериодичностьМесячная();
					НоваяСтрока.ЗаПериодС = НачалоМесяца(СрокиПеречисления.Месяц);
					НоваяСтрока.ЗаПериодПо = КонецМесяца(СрокиПеречисления.Месяц);
					НоваяСтрока.СрокУплаты = ПолучитьСледующуюРабочуюДату(СрокиПеречисления.СрокПеречисления);
					НоваяСтрока.Кто = НСтр("ru = 'Вкладчики обязательных профессиональных пенсионных взносов'", ОбщегоНазначения.КодОсновногоЯзыка());
					НоваяСтрока.НалогПолноеНазв = НСтр("ru = 'Перечисление обязательных профессиональных пенсионных взносов'", ОбщегоНазначения.КодОсновногоЯзыка());
				КонецЦикла;
			ИначеЕсли (Событие.НазваниеСобытия = "ОПВР")Тогда
				СрокиПеречисления = ПолучитьСрокиПеречисленияОПВиСО(Справочники.НалогиСборыОтчисления.ОбязательныеПенсионныеВзносыРаботодателя);
				Пока СрокиПеречисления.Следующий() Цикл
					НоваяСтрока = ТаблУплата.Добавить();
					НоваяСтрока.Периодичность = ПериодичностьМесячная();
					НоваяСтрока.ЗаПериодС = НачалоМесяца(СрокиПеречисления.Месяц);
					НоваяСтрока.ЗаПериодПо = КонецМесяца(СрокиПеречисления.Месяц);
