// Возвращает результат со сроками перечисления платежей
//
// Параметры:
//   ВидОтчисления - СправочникСсылка.НалогиСборыОтчисления, 
//					вид отчисления для которого находятся сроки перечисления на неделю, в которую входит дата
//
// Возвращаемое значение:
//   ВыборкаИзРезультатаЗапроса - Выборка из результата запроса по регистру сведений "СрокиПеречисленияНалоговСборовОтчислений".
//
&НаСервере
Функция ПолучитьСрокиПеречисленияОПВиСО(ВидОтчисления)
	
	Запрос = Новый Запрос;
	
	Запрос.Текст = "
	|ВЫБРАТЬ РАЗРЕШЕННЫЕ
	|	СрокиПеречисленияНалоговСборовОтчислений.СрокПеречисления,
	|	СрокиПеречисленияНалоговСборовОтчислений.Месяц
	|ИЗ
	|	РегистрСведений.СрокиПеречисленияНалоговСборовОтчислений КАК СрокиПеречисленияНалоговСборовОтчислений
	|ГДЕ
	|	СрокиПеречисленияНалоговСборовОтчислений.Организация В (&Организация)
	|	И СрокиПеречисленияНалоговСборовОтчислений.ВидНалога = &ВидОтчисления
	|	И СрокиПеречисленияНалоговСборовОтчислений.СрокПеречисления Между &ДатаНач И &ДатаКон";
	
	Запрос.УстановитьПараметр("Организация", ДляОрганизации);
	Запрос.УстановитьПараметр("ВидОтчисления", ВидОтчисления);
	Запрос.УстановитьПараметр("ДатаНач", НачалоГода(ДатаНач));
	Запрос.УстановитьПараметр("ДатаКон", НачалоГода(ДобавитьМесяц(ДатаНач, 12)));
	
	Результат = Запрос.Выполнить();
	
	Если Результат.Пустой() Тогда
		// если не нашли для конкретной(ых) организаций, то ищем по пустой организации
		
		Запрос.УстановитьПараметр("Организация", Справочники.Организации.ПустаяСсылка());
		Результат = Запрос.Выполнить();
		
	КонецЕсли;
	
	Выборка = Результат.Выбрать();
	Возврат Выборка;
	
КонецФункции

// Получает данные из макета Календарь в таблицу. Все колонки - тип строка100.
//
// Параметры:
//  НазваниеОбласти - название области в макете.
//  КолонкиСтр      - строка через запятую, название колонок в результурующей таблице.
//
// Возвращаемое значение:
//  Таблица значений из макета Календаря с заданной областью.
//
&НаСервере
Функция ПолучитьТаблицуИзНастроек(НазваниеОбласти, КолонкиСтр, РазмерСтрок = 100)

	ОбластьМакет = Макет.Области.Найти(НазваниеОбласти);
	ТаблРезультат = Новый ТаблицаЗначений;
	Колонки = Новый Структура(КолонкиСтр);
	Если РазмерСтрок = 100 Тогда
		Строка100 = Строка100;
	Иначе
		Строка100 = Новый ОписаниеТипов("Строка", ,Новый КвалификаторыСтроки(РазмерСтрок));
	КонецЕсли;

	Для Каждого Зап Из Колонки Цикл
		ТаблРезультат.Колонки.Добавить(Зап.Ключ, Строка100);
	КонецЦикла;

	Для Ном = ОбластьМакет.Верх По ОбластьМакет.Низ Цикл

		НовСтр = ТаблРезультат.Добавить();
		НомерКолонкиВМакете = 0;
		Для Каждого Зап Из ТаблРезультат.Колонки Цикл
			НомерКолонкиВМакете = НомерКолонкиВМакете + 1;
			Сведение = Макет.Область(Ном, НомерКолонкиВМакете).Текст;
			Если (НомерКолонкиВМакете = 1) И (ПустаяСтрока(Сведение)) Тогда
				// Не считываем пустую строку в области, если она есть по первой колонке.
				ТаблРезультат.Удалить(НовСтр);
				Прервать;
			КонецЕсли;
			НовСтр[Зап.Имя] = Сведение;
		КонецЦикла;
	КонецЦикла;
	Возврат ТаблРезультат;

КонецФункции

