		Если Результат.Свойство("Штрихкод") Тогда
			Значение.Вставить("Штрихкод", Результат.Штрихкод);
		КонецЕсли;
	КонецЕсли;
	
	ОбработкаВыбораПодборВставкаИзБуфераНаСервере(Значение, "Товары");

