Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	Если Параметры.Свойство("Текст") Тогда
		Элементы.Декорация2.Заголовок = Параметры.Текст;
	КонецЕсли;
	Если Пользователи.РолиДоступны("ПолныеПрава",Пользователи.ТекущийПользователь()) Тогда
		Элементы.Декорация3.Видимость = Ложь;
	Иначе
		Элементы.Декорация3.Видимость = Истина;
	КонецЕсли;
	
		
