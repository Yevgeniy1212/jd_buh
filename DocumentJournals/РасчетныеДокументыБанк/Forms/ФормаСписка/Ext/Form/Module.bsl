// ОБРАБОТЧИКИ СОБЫТИЙ ФОРМЫ

&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Если НЕ ОбщегоНазначения.ПриСозданииНаСервере(ЭтаФорма, Отказ, СтандартнаяОбработка) Тогда
		Возврат;
	КонецЕсли;
	
	СтруктураОтбора   = Неопределено;
	ДатаОтбора 		  = Неопределено;
	РежимВыбораСписка = Неопределено;
	
	Если Параметры.Свойство("Отбор", СтруктураОтбора) И ТипЗнч(СтруктураОтбора) = Тип("Структура") Тогда
		СтруктураОтбора.Свойство("ДатаОтбора", ДатаОтбора);				
		Параметры.Отбор.Удалить("ДатаОтбора");
	КонецЕсли;
	
	Если НЕ ДатаОтбора = Неопределено Тогда		
		ОбщегоНазначенияКлиентСервер.УстановитьЭлементОтбораДинамическогоСписка(Список, "Дата",ДатаОтбора, ВидСравненияКомпоновкиДанных.МеньшеИлиРавно);		
	КонецЕсли;
	
	Если Параметры.Свойство("РежимВыбора", РежимВыбораСписка) И ТипЗнч(РежимВыбораСписка) = Тип("Булево") Тогда
		Элементы.Список.РежимВыбора = РежимВыбораСписка;
	КонецЕсли;                                          	

	ОбщегоНазначенияБКВызовСервера.УстановитьОтборПоОсновнойОрганизации(ЭтотОбъект);

КонецПроцедуры

&НаКлиенте
Процедура ОбработкаОповещения(ИмяСобытия, Параметр, Источник)
	
	Если ИмяСобытия = "ИзменениеОсновнойОрганизации" Тогда
		
		ОбщегоНазначенияБККлиент.ИзменитьОтборПоОсновнойОрганизации(Список, ,Параметр);
		
	КонецЕсли;

КонецПроцедуры

